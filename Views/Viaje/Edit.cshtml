@model SisWebViaje.Models.Viaje

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="card">
    <div class="card-header">
        <h3>Editar Viaje</h3>
    </div>
    <hr />
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.VIANRO)

                <div class="form-group">
                    @Html.LabelFor(model => model.BUSNRO, "Bus", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("BUSNRO", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BUSNRO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RUTCOD, "Ruta", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("RUTCOD", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RUTCOD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDCOD, "Chofer", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IDCOD", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDCOD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VIAHRS, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.VIAHRS, new { htmlAttributes = new { @class = "form-control",type="time" } })
                        @Html.ValidationMessageFor(model => model.VIAHRS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VIAFCH, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.VIAFCH, new { htmlAttributes = new { @class = "form-control" , type="date"} })
                        @Html.ValidationMessageFor(model => model.VIAFCH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.COSVIA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.COSVIA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.COSVIA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modificar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-success" })
</div>

<script type="text/javascript">
    $(function () {
        var pago = $("#COSVIA").val();

        try {
            pago = pago.replace(",", ".");

            $("#COSVIA").val(parseInt(pago))
        } catch (e) {
            $("#COSVIA").val(pago)
        }
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

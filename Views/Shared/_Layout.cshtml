<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @using SisWebViaje.Models;

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootbox.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    @{ 
        var userLogeado = (Usuarios)Session["usuario"];
    }

    <!--
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        -->

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap.min.css">


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Sistema Viajes", "Index", "Reporte", new { area = "" }, new { @class = "navbar-brand" })
                <img src="@Url.Content("~/Content/Recurso/LogoViaje2.png")" width="80" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Rutas", "Index", "Ruta")</li>
                    <li>@Html.ActionLink("Chofer", "Index", "Chofer")</li>
                    <li>@Html.ActionLink("Viajes", "Index", "Viaje")</li>
                    <li>@Html.ActionLink("Pasajeros", "Index", "Pasajero")</li>
                    <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:void(0)">@userLogeado.Nombre <span class="sr-only">Juan Alberto</span></a></li>
                    <li class="active"><a href="javascript:CerrarSesion()">Cerrar Sesion</a></li>
                </ul>
            </div>

        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    <script type="text/javascript">
        function CerrarSesion() {
            bootbox.confirm({
                message: "¿Esta Seguro que desea cerrar sesion?",
                buttons: {
                    confirm: {
                        label: 'Si',
                        className: 'btn-success'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.href = '@Url.Action( "CerrarSesion" , "Home")';
                    }
                }
            });
        }
    </script>
</body>
</html>

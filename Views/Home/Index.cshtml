@model SisWebViaje.Models.Usuarios

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link href="/Content/Login/css/style.css" rel="stylesheet" />

<style>
    ul {
        list-style: none;
    }
</style>


<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                       
                        <h3 class="text-center">
                            <img src="~/Content/Icono/login.png" width="120"/>
                        </h3>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <br />

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" , role="alert" })

                            <div class="form-group">
                                @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Usuario" } })
                                @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Usuario" } })
                                @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                            </div>
                            <div class="mt-3">
                                <input type="submit" value="Iniciar Sesion" class="btn btn-block btn-primary btn-lg" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>